{%- if series.path -%}
{%- capture path -%}{{ series.path }}/{%- endcapture -%}
{%- endif -%}
{%- if series.columns -%}
{%- assign columns = series.columns -%}
{%- endif -%}
<ul class="cardsD panel x{{ columns }}">
    {%- for article in articles %}
    <li>
        <a href="./{{ path }}{{ article.url }}.md">
            <div class="cardSize">
                <div class="cardPadding">
                    <div class="card">
                        <div class="cardImageOuter">
                            <div class="cardImage bgdAccent1 cardScaleImage" style="background-image: url('./{{ path }}images/{{ article.url }}.svg');">
                            </div>
                        </div>
                        <div class="cardText">
                            <h3>{{ article.title }}</h3>
                            <p>{{ article.description }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </li>
    {%- endfor %}
</ul>